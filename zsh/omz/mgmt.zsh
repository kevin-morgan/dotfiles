# ---------------------------------------------------------------------
# CONFIGURATION
# ---------------------------------------------------------------------

if [[ "$OSTYPE" = darwin* ]]; then
  alias dots='st ~/.dots'
  alias reload='source .zshrc'
else
  alias dots='cd ~/.dots && vim'
  alias reload='source ~/.bash_profile && echo "sourced ~/.bash_profile"'
fi

# ---------------------------------------------------------------------
# HOSTS
# ---------------------------------------------------------------------

alias hosts='sudo vi /etc/hosts'
alias shosts='st /etc/hosts'
