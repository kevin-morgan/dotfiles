# Gain Authority #
alias root="sudo -i"
alias su="sudo -i"
alias ss="sudo -s"
alias switch="sudo -i -u"

# Chmod Aliases #
alias mx="chmod a+x"
alias 000="chmod 000"
alias 644="chmod 644"
alias 755="chmod 755"
alias 700="chmod 700"

# Hash #
alias md5="openssl md5"
alias sha1="openssl sha1"
